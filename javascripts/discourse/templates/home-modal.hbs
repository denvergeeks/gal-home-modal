<DModalBody @title={{theme-prefix "modal_data.title"}}> 
    <div class="modal-content">
      <img src="{{theme-setting 'custom_image'}}"/>
      <h2>{{theme-i18n "modal_data.big_text"}}</h2>
      <p>{{theme-i18n "modal_data.little_text"}}</p>
      
      <div class="modal-steps">        
        <div id="step-1" class="step">
          <h3>Step 1</h3>
          <div aria-label={{this.currentUser.name}} class="avatar-img-wrapper">
            <UserProfileAvatar @user={{this.currentUser}} />
          </div>
          <div class="avatar-change-button-wrapper">
            <DButton
              @class="btn-default pad-right"
              @icon="pencil-alt"
              @action={{"showAvatarSelector"}}
              @actionParam={{this.currentUser}}
              @computedLabel="Change your Avatar"
              >
              <span style="padding-left: 0.5em;">Change your Avatar</span>
            </DButton>
          </div>
          {{#if this.canEditName}}
            <div class="control-group pref-name">
              <label class="control-label">{{i18n "modal.name_edit_field_title"}}</label>
              <div class="controls">
                {{#if this.currentUser.can_edit_name}}
                  <TextField @value={{this.newNameInput}} @classNames="input-xxlarge" @maxlength="255" />
                {{else}}
                  <span class="static">{{this.currentUser.name}}</span>
                {{/if}}
              </div>
              <div class="instructions">
                {{this.nameInstructions}}
              </div>
            </div>
          {{/if}}
        </div>
        <div id="step-2" class="step">Step 2</div>
        <div id="step-3" class="step">Step 3</div>
        <div id="step-4" class="step">Step 4</div>
      </div>      

    </div>  
</DModalBody>

<div class="modal-footer">     
      <DButton @class={{theme-setting "button_style"}} @icon={{theme-setting "button_icon"}} @label='Button Label' @action={{"showLogin"}} />            
      <a href {{on "click" this.ssoLoginGate}}>Some Link</a>  
</div>
